<?xml version="1.0" encoding="utf-8"?>
<setup>
  <type name = "test_repl">
	  <replication>
	  	<Publisher>
				<PublisherName>test_pub_server</PublisherName>
				<PublicationName>test_pub</PublicationName>
				<PublicationDBName>test_db</PublicationDBName>
			</Publisher>
			<Subscriber>
   			<SubscriberName>test_sub_server</SubscriberName>
   			<SubscriptionDBName>test_sub_db</SubscriptionDBName>
 			</Subscriber>
			<Distributor>
				<DistributorName>test_dist_server</DistributorName>
				<DistributionDBName>test_dist_db</DistributionDBName>
				<DatabaseConfig>
					<DataFolder>c:\sqldata</DataFolder>
					<DataFileSize>100</DataFileSize>
					<LogFolder>c:\sqllogs</LogFolder>
					<LogFileSize>100</LogFileSize>
				</DatabaseConfig>
				<WorkingDirectory>C:\repldata</WorkingDirectory>	
				<VerifyDistributionDB>0</VerifyDistributionDB>
				<LocalDistributor>0</LocalDistributor>
				<Security>
	        <LogReaderAgent>
	        	<Login>domain\sqlrepl</Login>
	        	<EncryptedPassword>encrypted-password</EncryptedPassword>
	        </LogReaderAgent>
	        <SnapshotAgent>
	        	<Login>domain\sqlrepl</Login>
	        	<EncryptedPassword>encrypted-password</EncryptedPassword>
	        </SnapshotAgent>
				</Security>
				<DistributorAdminEncryptedPassword>encrypted-password</DistributorAdminEncryptedPassword>
				<Alerts>
		  		<Latency>
		  			<DelayBetweenResponses>1800</DelayBetweenResponses>
		  		</Latency>
	  		</Alerts>
			</Distributor>          
			<Publication>
				<VerifyPublicationDB>1</VerifyPublicationDB>
				<ArticleInfo>
					<Articles>
						<Article><Name>dbo.test_table1</Name></Article>
						<Article><Name>dbo.test_table12</Name></Article>
      			</Articles>
	      	<ArticleOptions>PrimaryObject,ClusteredIndexes,DriPrimaryKey,Schema,CustomProcedures</ArticleOptions>
	      </ArticleInfo>
				<SecurityMode>Integrated</SecurityMode>
				<Subscription>
					<VerifySubscriptionDB>1</VerifySubscriptionDB>
					<CreateSubscriptionDB>1</CreateSubscriptionDB>
					<InvalidateSnapshot>1</InvalidateSnapshot>
					<Security>
						<SubscriberSecurity>
							<WindowsAuthentication>1</WindowsAuthentication>
							<SqlStandardLogin>test_repl_login</SqlStandardLogin>
							<SqlStandardPasswordEncrypted>encrypted-password</SqlStandardPasswordEncrypted>
						</SubscriberSecurity>
						<DistributionAgent>
								<Login>domain\sqlrepl</Login>
								<EncryptedPassword>encrypted-password</EncryptedPassword>
						</DistributionAgent>						
					</Security>
					<Initialize>1</Initialize>
				</Subscription>
			</Publication>
	  </replication>
	</type>
</setup>   
    